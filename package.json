{
	"name": "vscopper",
	"displayName": "CoPPer - CP for VSCode",
	"description": "A VS Code Extension suited for giving Competitive Programming Contests",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscopper.helloWorld",
		"onCommand:vscopper.codeforcesContest",
		"onCommand:vscopper.showWebView"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscopper.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "vscopper.codeforcesContest",
				"title": "Codeforces Contest"
			},
			{
				"command": "vscopper.showWebView",
				"title": "Show Webview"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
